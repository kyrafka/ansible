# Configuraci칩n de red para {{ ansible_hostname }}

# Loopback interface
auto lo
iface lo inet loopback

# Configuraci칩n para ens33 (interfaz principal)
auto {{ network_ipv6_interface | default('ens33') }}
iface {{ network_ipv6_interface | default('ens33') }} inet6 static
    address {{ network_ipv6_address | default('2001:db8:1::10') }}
    netmask {{ network_ipv6_netmask | default('64') }}
    {% if network_ipv6_gateway is defined %}
    gateway {{ network_ipv6_gateway }}
    {% endif %}
    dns-nameservers {{ network_ipv6_dns_servers | default(['2001:4860:4860::8888', '2001:4860:4860::8844']) | join(' ') }}
    {% if network_ipv6_domain is defined %}
    dns-search {{ network_ipv6_domain }}
    {% endif %}

# Configuraci칩n de rutas est치ticas adicionales
{% if network_ipv6_static_routes is defined %}
{% for route in network_ipv6_static_routes %}
up ip -6 route add {{ route.network }} via {{ route.gateway }} dev {{ route.interface | default(network_ipv6_interface | default('ens33')) }}
{% endfor %}
{% endif %}

# Habilitar IPv6
iface {{ network_ipv6_interface | default('ens33') }} inet6 auto
    accept_ra 1
