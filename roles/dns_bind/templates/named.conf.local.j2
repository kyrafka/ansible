// Configuraci√≥n de zonas locales para {{ dns_domain_name }}
//

// Zona directa
zone "{{ dns_domain_name }}" {
    type master;
    file "/etc/bind/zones/db.{{ dns_domain_name }}";
    allow-update { none; };
    allow-query { any; };
};

// Zona inversa IPv6
zone "{{ dns_ipv6_reverse_zone }}" {
    type master;
    file "/etc/bind/zones/db.{{ dns_ipv6_reverse_zone }}";
    allow-update { none; };
    allow-query { any; };
};