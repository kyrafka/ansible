# Configuración global de DHCPv6
default-lease-time 600;
max-lease-time 7200;
option dhcp6.domain-name "gamecenter.local";

# Configuración de la red principal
subnet6 2025:db8:10::/64 {
    # Rango de direcciones asignables (desde ::10 en adelante)
    range6 2025:db8:10::10 2025:db8:10::FFFF;

    # Configuración DNS
    option dhcp6.name-servers 2025:db8:10::1;
    option dhcp6.domain-name "gamecenter.local";

    # Otras opciones
    option dhcp6.preference 255;
    option dhcp6.rapid-commit;
}

