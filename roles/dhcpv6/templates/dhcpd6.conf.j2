# Configuraci칩n global de DHCPv6
default-lease-time {{ dhcp6_config.default_lease_time | default(600) }};
max-lease-time {{ dhcp6_config.max_lease_time | default(7200) }};
option dhcp6.domain-name "{{ network_config.domain_name }}";

# Configuraci칩n de la red principal
subnet6 {{ network_config.ipv6_network }} {
    # Rango de direcciones asignables
    range6 {{ network_config.dhcp_range_start }} {{ network_config.dhcp_range_end }};

    # Configuraci칩n DNS
    option dhcp6.name-servers {{ network_config.ipv6_gateway }};
    option dhcp6.domain-name "{{ network_config.domain_name }}";

    # Otras opciones
    option dhcp6.preference 255;
    option dhcp6.rapid-commit;
}

